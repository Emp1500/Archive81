<%- include('partials/header.ejs') %>
<link rel="stylesheet" href="/Capstone 3/public/about.css">
<div class="container py-5" style="min-height: 80vh;">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg border-0 bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5">
                    <h1 class="text-center mb-4" style="font-family: 'Orbitron', 'Montserrat', Arial, sans-serif; letter-spacing: 2px; font-weight: 700;">
                        CONTACT ME
                    </h1>
                    <form action="/contact" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label text-uppercase" style="letter-spacing: 1px;">Name</label>
                            <input type="text" class="form-control bg-secondary text-white border-0" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label text-uppercase" style="letter-spacing: 1px;">Email</label>
                            <input type="email" class="form-control bg-secondary text-white border-0" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label text-uppercase" style="letter-spacing: 1px;">Message</label>
                            <textarea class="form-control bg-secondary text-white border-0" id="message" name="message" rows="4" required></textarea>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-outline-light btn-lg fw-bold" style="letter-spacing: 2px; border-radius: 2rem; transition: background 0.3s;">
                                SEND
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-4">
            </div>
        </div>
    </div>
</div>
<link href="https://fonts.googleapis.com/css?family=Orbitron:700|Montserrat:400,700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

